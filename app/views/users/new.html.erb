<div class="container">
<h1>Add a user</h1>

<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <%= @error %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>